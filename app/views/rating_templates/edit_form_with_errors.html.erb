<!-- Validation failure messages -->
<% if @rating.errors.any? %>
  <% @rating.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit rating #<%= @rating.id %>
</h1>

<hr>

<!-- Form rating start -->
<form action="/update_rating/<%= @rating.id %>" method="post">
<!-- Form rating end -->

  <!-- Label and input for album_id start -->
  <div class="form-group">
    <label for="album_id">
      Album
    </label>

    <!-- Input for album_id start -->
    <%= select_tag(:album_id, options_from_collection_for_select(Album.all, :id, :title, @rating.album_id), :class => "form-control") %>
    <!-- Input for album_id end -->
  </div>
  <!-- Label and input for album_id end -->

  <!-- Label and input for user_id start -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for rating start -->
  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <!-- Input for rating start -->
    <input type="text" id="rating" name="rating" class="form-control" value="<%= @rating.rating %>">
    <!-- Input for rating end -->
  </div>
  <!-- Label and input for rating end -->

  <button class="btn btn-block btn-outline-secondary">
    Update rating
  </button>
</form>

<hr>

<a href="/ratings">
  Go back
</a>
