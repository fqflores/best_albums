<h1>
  Edit rating #<%= @rating.id %>
</h1>

<hr>

<form action="/update_rating/<%= @rating.id %>" method="post">

  <div class="form-group">
    <label for="album_id">
      Album
    </label>

    <%= select_tag(:album_id, options_from_collection_for_select(Album.all, :id, :title, @rating.album_id), :class => "form-control") %>
  </div>


  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <input type="text" id="rating" name="rating" class="form-control" value="<%= @rating.rating %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update rating
  </button>
</form>

<hr>

<a href="/ratings">
  Go back
</a>
