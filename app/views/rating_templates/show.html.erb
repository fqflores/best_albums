<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Rating #<%= @rating.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/ratings" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link rating start -->
      <div class="col">
        <% if current_user == @rating.user %>
          <a href="/ratings/<%= @rating.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit rating
          </a>
        <% end %>
      </div>
      <!-- Edit link rating end -->

      <!-- Delete link rating start -->
      <div class="col">
        <% if current_user == @rating.user %>
          <a href="/delete_rating/<%= @rating.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete rating
          </a>
        <% end %>
      </div>
      <!-- Delete link rating end -->
    </div>

    <dl>
      <dt>
        Album
      </dt>
      <!-- Display album_id start -->
      <dd>
        <%= @rating.album_id %>
      </dd>
      <!-- Display album_id end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @rating.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Rating
      </dt>
      <!-- Display rating start -->
      <dd>
        <%= @rating.rating %>
      </dd>
      <!-- Display rating end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@rating.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@rating.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

