<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All artists
    </h1>

    <a href="/artists/new" class="btn btn-block btn-outline-secondary">
      Add a new artist
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "artist_templates/artists_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Bio
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @artists.each do |artist| %>
      <tr>
        <!-- Display artist.id start -->
        <td>
          <%= artist.id %>
        </td>
        <!-- Display artist.id end -->

        <!-- Display artist.name start -->
        <td>
          <%= artist.name %>
        </td>
        <!-- Display artist.name end -->

        <!-- Display artist.bio start -->
        <td>
          <%= artist.bio %>
        </td>
        <!-- Display artist.bio end -->

        <!-- Display artist.image start -->
        <td>
          <%= artist.image %>
        </td>
        <!-- Display artist.image end -->

        <!-- Display artist.created_at start -->
        <td>
          <%= time_ago_in_words(artist.created_at) %> ago
        </td>
        <!-- Display artist.created_at end -->

        <!-- Display artist.updated_at start -->
        <td>
          <%= time_ago_in_words(artist.updated_at) %> ago
        </td>
        <!-- Display artist.updated_at end -->

        <td>
          <a href="/artists/<%= artist.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @artists, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
