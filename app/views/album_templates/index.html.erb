<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All albums
    </h1>

    <a href="/albums/new" class="btn btn-block btn-outline-secondary">
      Add a new album
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Year
        </th>

        <th>
          Image
        </th>

        <th>
          Artist
        </th>

        <th>
          Genre
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @albums.each do |album| %>
      <tr>
        <!-- Display album.id start -->
        <td>
          <%= album.id %>
        </td>
        <!-- Display album.id end -->

        <!-- Display album.title start -->
        <td>
          <%= album.title %>
        </td>
        <!-- Display album.title end -->

        <!-- Display album.year start -->
        <td>
          <%= album.year %>
        </td>
        <!-- Display album.year end -->

        <!-- Display album.image start -->
        <td>
          <%= album.image %>
        </td>
        <!-- Display album.image end -->

        <!-- Display album.artist_id start -->
        <td>
          <%= album.director.name %>
        </td>
        <!-- Display album.artist_id end -->

        <!-- Display album.genre start -->
        <td>
          <%= album.genre %>
        </td>
        <!-- Display album.genre end -->

        <!-- Display album.created_at start -->
        <td>
          <%= time_ago_in_words(album.created_at) %> ago
        </td>
        <!-- Display album.created_at end -->

        <!-- Display album.updated_at start -->
        <td>
          <%= time_ago_in_words(album.updated_at) %> ago
        </td>
        <!-- Display album.updated_at end -->

        <td>
          <a href="/albums/<%= album.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @albums, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
