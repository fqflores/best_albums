<% if @album.present? %>
  <% if @album.errors.any? %>
    <% @album.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new album
</h1>


<hr>

<form action="/create_album" method="post">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @album.title %>">
  </div>

  <div class="form-group">
    <label for="year">
      Year
    </label>

    <input type="text" id="year" name="year" class="form-control" value="<%= @album.year %>">
  </div>

  <div class="form-group">
    <label for="image">
      Image
    </label>

    <input type="text" id="image" name="image" class="form-control" value="<%= @album.image %>">
  </div>

  <div class="form-group">
    <label for="artist_id">
      Artist
    </label>

    <%= select_tag(:artist_id, options_from_collection_for_select(Artist.all, :id, :name, @album.artist_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="genre">
      Genre
    </label>

    <input type="text" id="genre" name="genre" class="form-control" value="<%= @album.genre %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create album
  </button>
</form>

<hr>

<a href="/albums">
  Go back
</a>
