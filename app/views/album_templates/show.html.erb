<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Album #<%= @album.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/albums" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link album start -->
      <div class="col">
        <a href="/albums/<%= @album.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit album
        </a>
      </div>
      <!-- Edit link album end -->

      <!-- Delete link album start -->
      <div class="col">
        <a href="/delete_album/<%= @album.id %>" class="btn btn-block btn-outline-secondary">
          Delete album
        </a>
      </div>
      <!-- Delete link album end -->
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <!-- Display title start -->
      <dd>
        <%= @album.title %>
      </dd>
      <!-- Display title end -->

      <dt>
        Year
      </dt>
      <!-- Display year start -->
      <dd>
        <%= @album.year %>
      </dd>
      <!-- Display year end -->

      <dt>
        Image
      </dt>
      <!-- Display image start -->
      <dd>
        <%= @album.image %>
      </dd>
      <!-- Display image end -->

      <dt>
        Artist
      </dt>
      <!-- Display artist_id start -->
      <dd>
        <% if @album.director.present? %>
          <a href="/artists/<%= @album.artist_id %>">
            <%= @album.director.name %>
          </a>
        <% end %>
      </dd>
      <!-- Display artist_id end -->

      <dt>
        Genre
      </dt>
      <!-- Display genre start -->
      <dd>
        <%= @album.genre %>
      </dd>
      <!-- Display genre end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@album.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@album.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "album_templates/album_likes" %>
  </div>
</div>
<!-- Show Page Customization end -->
