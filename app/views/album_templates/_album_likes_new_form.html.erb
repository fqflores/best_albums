<form action="/create_rating_from_album" method="post">

  <input type="hidden" name="album_id" value="<%= @album.id %>">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <input type="text" id="rating" name="rating" class="form-control" value="<%= @rating.rating %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create rating
  </button>
</form>
